<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Notifications">

        <android.support.v7.preference.CheckBoxPreference
            android:key="key_show_count_notification"
            android:title="Show 'count' notification"
            android:summary="Show a notification with the count in your NotificationBox"
            android:defaultValue="true" />

        <android.support.v7.preference.ListPreference
            android:key="key_count_notification_mode"
            android:title="Notification mode"
            android:summary="Choose when the notification shows"
            android:entries="@array/count_notification_mode_entries"
            android:entryValues="@array/count_notification_mode_values" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>